<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:id="@+id/rlBookInfo">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:srcCompat="@tools:sample/avatars[3]"
        android:src="@android:drawable/ic_menu_add"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivCover"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivCover"
                android:text="@string/title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_toEndOf="@+id/ivCover"
                android:text="@string/author"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAuthor"
                android:layout_toEndOf="@+id/ivCover"
                android:text="@string/genre"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvAgeRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGenre"
                android:layout_toEndOf="@+id/ivCover"
                android:text="Age Range"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvSynopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlBookInfo"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        android:text="Book synopsis here" />

    <TextView
        android:id="@+id/tvStoreLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSynopsis"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="Store Location: Downtown Sunnyvale" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStoreLocation"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddToWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:useCompatPadding="true"
        android:src="@drawable/ic_baseline_add_24"/>

</RelativeLayout>