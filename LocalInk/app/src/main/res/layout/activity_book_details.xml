<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BookDetailsActivity"
    style="@style/AppTheme">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/local_ink_logo_inverted"/>

        </RelativeLayout>

    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="book">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:id="@+id/rlBookInfo">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:srcCompat="@tools:sample/avatars[3]"
            android:contentDescription="@string/book_cover"
            android:transitionName="cover"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivCover"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:transitionName="title"/>

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/author"
                android:textSize="16sp"
                android:transitionName="author"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/cGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/genre"
                android:textSize="18sp"
                app:chipBackgroundColor="@color/paleColorAccent"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/cAgeRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Age Range"
                android:textSize="18sp"
                app:chipBackgroundColor="@color/paleColorAccent"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvSynopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlBookInfo"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        tools:text="Book synopsis here"
        android:transitionName="synopsis"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSynopsis"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            tools:text="Bookstore name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvStoreLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            tools:text="12345 Street Road, Los Angeles 90013"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddToWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp"
        android:src="@drawable/ic_baseline_add_24"
        app:useCompatPadding="true"
        app:backgroundTint="@color/colorAccent"/>

</RelativeLayout>
